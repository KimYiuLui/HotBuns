<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hotbuns</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark nav-bg">
        <div class="container">
            <a >@Html.ActionLink("HotBuns", "Index", "Home", new { @class = "navbar-brand navbar-logo mx-auto text-center" })</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div>

                </div>
                <div class="mx-auto">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item mx-auto">
                            <a >@Html.ActionLink("Brood", "About", "Home", new {@class = "nav-link" })</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a>@Html.ActionLink("Koek", "Contact", "Home", new { @class = "nav-link"})</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a>@Html.ActionLink("Zoetigheid", "Contact", "Home", new { @class = "nav-link"})</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a>@Html.ActionLink("Over Ons", "Contact", "Home", new{@class="nav-link" })</a>
                        </li>

                    </ul>
                </div>
                <div class="ml-auto">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-auto">
                            <a>@Html.ActionLink(" ", "ShoppingCart", "Home", new { area = "ShopppingCart" }, new { @class = "fas fa-shopping-cart fa-2x nav-link" }) </a>
                        </li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </nav>

        

    @* --Body-- *@
    <div class="">
        @RenderBody()
        <hr />

        @*--Footer-- *@
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @* --scripts -- *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
